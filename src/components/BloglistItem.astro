---
import { fade } from 'astro:transitions';

interface Props {
  title: string,
  date?: string,
  source: string,
  href: string;
}
const { title, date, source, href } = Astro.props;
---

<a href={href}>
  <div class="w-96 h-auto p-4 rounded-xl backdrop-blur-lg hover:backdrop-blur-xl text-slate-100 mt-4" transition:name='paragraph' transition:animate={fade({ duration: '1.5s' })}>
    <h2 class="font-semibold">{title}</h2>
    <h2 class="font-light">{date}</h2>
    <h2 class="font-light">{source}</h2>
  </div>
</a>
