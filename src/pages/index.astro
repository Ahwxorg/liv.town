---
import Layout from '../layouts/Layout.astro';
import Heading from '../components/Heading.astro'
import Paragraph from '../components/Paragraph.astro'
import NormalLink from '../components/NormalLink.astro'
import Greeting from '../components/Greeting.jsx'
---

<Layout title="liv - hometown" description="liv to your fullest">
<main>
    <div class="">
      <Heading><Greeting client:load />!</Heading>
      <Paragraph>Welcome to liv.town! In modern Norwegian, Swedish, and Danish, the name "liv" is homophonous with the word "liv" meaning "life". This is a little project for me to enjoy "a town of life" - and you're invited to <NormalLink href="/garden">walk through the garden</NormalLink>!</Paragraph>
    </div>
    <aside transition:name="main-page">
</main>
</Layout>
